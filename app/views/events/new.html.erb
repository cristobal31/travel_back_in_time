<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h1><strong> Your new Event</strong></h1>
        <%= simple_form_for @event do |f| %>
          <%= f.hidden_field :user_id, value: @event.id %>
          <%= f.input :name, placeholder: 'Enter the name of the event' %>
          <%= f.input :year, placeholder: 'Enter which year' %>
          <%= f.input :category, placeholder: 'Enter what category' %>
          <%= f.input :era, placeholder: 'Enter era' %>
          <%= f.submit class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
