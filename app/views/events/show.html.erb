<div class="container">
  <div class="position-relative">
    <div class="card-category card-large" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path('pyramid.jpg') %>)">
      <h1><%= @event.name %></h1>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th scope="row">Description</th>
            <td><%= @event.description %></td>
          </tr>
          <tr>
            <th scope="row">Category</th>
            <td><%= @event.category %></td>
          </tr>
          <tr>
            <th scope="row">Year</th>
            <td><%= @event.year %></td>
          </tr>
          <tr>
            <th scope="row">Price</th>
            <td><%= @event.price %></td>
          </tr>
        </tbody>
      </table>
       <% if @booked %>

        <h3>This has been booked for <%= @booking.start_date  %></h3>
       <% else %>
        <h2 class="form-h2">Create a new booking:</h2>
        <%= simple_form_for [@event, @booking] do |f| %>
          <%= f.input :start_date, as: :date, html5: true %>
          <%= f.input :end_date, as: :date, html5: true %>
          <%= f.button :submit, class: "btn btn-back" %>
        <% end %>
      <% end %>

    </div>
  </div>
</div>
